pipeline {
    agent any

    tools {
        // Manage Jenkins -> Tools kısmında verdiğin ismin aynısı olmalı
        maven 'Maven 3.9.6' 
    }

    stages {
        stage('1. Checkout') {
            steps {
                echo 'Kodlar GitHubdan cekiliyor...'
                checkout scm
            }
        }

        stage('2. Build') {
            steps {
                echo 'Backend projesi derleniyor...'
                // Dizin backend klasörü olduğu için komutu o klasörde çalıştırmalıyız
                dir('car-rental-system-backend') {
                    bat 'mvn clean install -DskipTests'
                }
            }
        }
    }
}