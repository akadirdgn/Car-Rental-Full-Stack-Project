pipeline {
    agent any

    tools {
        // Ekran görüntüsünde başarıyla tanımladığın Maven versiyonu
        maven 'Maven 3.9.6' 
    }

    stages {
        stage('1. Checkout') {
            steps {
                checkout scm
            }
        }

        stage('2. Build') {
            steps {
                dir('car-rental-system-backend') {
                    bat 'mvn clean install -DskipTests'
                }
            }
        }

        stage('3. Birim Testleri') {
            steps {
                dir('car-rental-system-backend') {
                    // Sadece Unit Testleri çalıştırır
                    bat 'mvn test'
                }
            }
            post {
                always {
                    // Test sonuçlarını Jenkins'e raporlar
                    junit 'car-rental-system-backend/target/surefire-reports/*.xml'
                }
            }
        }

        stage('4. Entegrasyon Testleri') {
            steps {
                dir('car-rental-system-backend') {
                    // Integration testleri genellikle 'verify' fazında çalışır
                    bat 'mvn verify -DskipUnitTests' 
                }
            }
            post {
                always {
                    // Entegrasyon testi sonuçlarını raporlar
                    junit 'car-rental-system-backend/target/failsafe-reports/*.xml'
                }
            }
        }
    }
}